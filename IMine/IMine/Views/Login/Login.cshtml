@model IMine.Models.AccountModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<!-- Nulled by http://www.baobinh.net by tieulonglanh -->

<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800">
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,700,300">
    <link type="text/css" rel="stylesheet" href="/Content/styles/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="/Content/styles/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/Content/styles/animate.css">
    <link type="text/css" rel="stylesheet" href="/Content/styles/main.css">
    <link type="text/css" rel="stylesheet" href="/Content/styles/style-responsive.css">

    <style>
        body {
            overflow: hidden;
            background-size: cover;
            background-position: center center;
            background-image: url(../../Content/Tuyet_roi/tuyet_1.png), url(../../Content/Tuyet_roi/tuyet_2.png), url(../../Content/Tuyet_roi/tuyet_3.png);
            -webkit-animation: tuyet-roi 20s linear infinite;
            -moz-animation: tuyet-roi 20s linear infinite;
            animation: tuyet-roi 20s linear infinite;
        }

        @@keyframes tuyet-roi {
            0% {
                background-position: 0px 0px, 0px 0px, 0px 0px;
            }

            100% {
                background-position: 500px 1000px, 400px 400px, 300px 300px;
            }
        }

        @@-moz-keyframes tuyet-roi {
            0% {
                background-position: 0px 0px, 0px 0px, 0px 0px;
            }

            100% {
                background-position: 500px 1000px, 400px 400px, 300px 300px;
            }
        }

        @@-webkit-keyframes tuyet-roi {
            0% {
                background-position: 0px 0px, 0px 0px, 0px 0px;
            }

            100% {
                background-position: 500px 1000px, 400px 400px, 300px 300px;
            }
        }

        h1 {
    color: #f35626;
    background-image: -webkit-linear-gradient(92deg,#f35626,#feab3a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-animation: hue 2s infinite linear;
}

@@-webkit-keyframes hue {
    from {
      -webkit-filter: hue-rotate(0deg);
    }
    
    to {
      -webkit-filter: hue-rotate(360deg);
    }
}
    </style>

</head>
<body>
    @*class="login-block">*@
    <div class="page-form">
        <div class="panel panel-blue">
            <div class="panel-body pan">

                @*<form action="#" class="form-horizontal">*@
                <div class="form-horizontal">
                    <div class="form-body login-padding">
                        <div class="col-md-12 text-center">
                            <h1 class="IndexString" style="margin-top: -150px; font-size:42px; letter-spacing:-1px; font-weight:bold"> Welcome To IMine </h1>
                            <h2 style="font-weight:bold; font-style:italic; color:aquamarine; width:420px"> Nơi Lưu Trữ Hình Ảnh Của Bạn </h2>
                            <br />
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <img src="~/Content/images/logo.png" class="img-responsive" style="margin-top: -10px; border:2px #e5e5e5 solid" />
                            </div>
                            <div class="col-md-9">
                                <h2 style="text-align:center">Đăng Nhập</h2>
                            </div>
                        </div>
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                            <div class="form-group">
                                <label for="inputName" class="col-md-3 control-label">
                                    Tài khoản:
                                </label>
                                <div class="col-md-9">
                                    <div class="input-icon right">
                                        <i class="fa fa-user"></i>
                                        @Html.TextBoxFor(x => x.username, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword" class="col-md-3 control-label">
                                    Mật khẩu:
                                </label>
                                <div class="col-md-9">
                                    <div class="input-icon right">
                                        <i class="fa fa-lock"></i>
                                        @Html.TextBoxFor(x => x.password, new { @class = "form-control", @type = "password" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mbn">
                                <div class="col-lg-12">
                                    <div class="form-group mbn">
                                        <div class="col-lg-3">
                                            &nbsp;
                                        </div>
                                        <div class="col-lg-9">
                                            <a class="btn btn-default back-btn" href="@Url.Action("Register","Login")">Đăng Ký</a>
                                            <input type="submit" class="btn btn-default sign-btn" value="Đăng Nhập" />                                                
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                @*</form>*@

            </div>
        </div>
        <div class="col-lg-12 text-center">
            <p>
                <a href="#" style="color:#d0dbf2">Quên Mật Khẩu</a>
            </p>
        </div>
    </div>
</body>

<!-- Nulled by http://www.baobinh.net by tieulonglanh -->
</html>
