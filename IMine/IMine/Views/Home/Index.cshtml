@model IMine.Models.FolderModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <style>
        .imgUpload {
            max-height: 60px;
            max-width: 50px;
            box-shadow: 0px 0px 6px rgba(0, 0, 0, 10);
            border-radius: 50%;
        }

            .imgUpload:active {
                opacity: 0.5;
                box-shadow: none;
            }
    </style>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>


        function myFunction() {
            $("#dialog-message").dialog("open");
        }
    </script>

</head>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thư mục mới</h4>
            </div>

            @using (Html.BeginForm("CreateFolder", "Home", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <fieldset>
                        <label for="name">Tên Thư Mục</label>
                        @Html.TextBoxFor(model => model.Fname, null, new { id = "name", @class = "text ui-widget-content ui-corner-all" })
                       
                    </fieldset>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" data-dismiss="modal">Tạo mới</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                </div>
            }
        </div>
    </div>
</div>

<button type="button" id="create-folder" data-toggle="modal" data-target="#myModal">Create new user</button> <br /><br /><br />




@using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { @class = "upLoad", enctype = "multipart/form-data" }))
{
    <img style="position:absolute; bottom:50px; right:50px " src="~/Content/images/button.png" class="imgUpload" onclick="OpenFiledialog()" />
        <input name="files" class="mainSubmit" type="file" style="display:none" onchange="UploadFile()" multiple />
}

@foreach (var folder in ViewBag.folder)
{
    <div class="col-sm-6 col-md-3" style="width:160px;">
        <img style="height:160px; width:126px; max-height:160px; max-width:126px; overflow:hidden; box-shadow: 0px 0px 6px rgba(0, 0, 0, 10);" src="~/Content/images/folder.jpg" />
    </div>
}

@foreach (var item in ViewBag.img)
{
    <div class="col-sm-6 col-md-3" style="width:160px;">
        <img style="height:160px; width:126px; max-height:160px; max-width:126px; overflow:hidden; box-shadow: 0px 0px 6px rgba(0, 0, 0, 10);" src="~/Photos/@item" />
    </div>
}

