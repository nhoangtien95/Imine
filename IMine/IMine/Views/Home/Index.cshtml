
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <style>
        .test {
            box-shadow: 0px 0px 6px rgba(0, 0, 0, 10);
            border-radius: 50%;
        }

        .test:active{
            opacity:0.5;
            box-shadow: none;
        }

    </style>


