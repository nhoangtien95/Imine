
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>

@using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { @class = "upLoad", enctype = "multipart/form-data" }))
{
    <img src="~/Content/images/logo.png" class="imgUpload" onclick="OpenFiledialog()" />
    <input name="files" class="mainSubmit" type="file" style="display:none" onchange="UploadFile()" multiple />
}
<script>

    function OpenFiledialog() {
        $('.mainSubmit').trigger('click');
    }

   function UploadFile()
   {
       $('.upLoad').submit();
       //do validation here
       //document.forms['upLoad'].submit();
   }
</script>
@foreach (var item in ViewBag.img)
{
<img src="~/Photos/@item" style="max-height:300px; max-width:200px" />
}